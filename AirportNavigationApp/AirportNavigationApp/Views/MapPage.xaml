<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirportNavigationApp.Views.MapPage"
             BackgroundColor="#595959">

    <Shell.TitleView>
        <Label HorizontalOptions="Center" VerticalTextAlignment="Center" Text="          Map Information" FontSize="30" TextColor="#FFFFFF"/>
    </Shell.TitleView>
    <StackLayout>

        <Label Text="{Binding ViewMessage}" TextColor="White" FontSize ="16" HorizontalTextAlignment="Center"/>
        <ScrollView HorizontalScrollBarVisibility="Never" VerticalScrollBarVisibility="Never" Orientation="Both">

            <AbsoluteLayout>
                <Image Source="DAB.png"/>
                <ImageButton Source="icon_about.png"
                             AbsoluteLayout.LayoutFlags="PositionProportional"  
                             AbsoluteLayout.LayoutBounds="0.88,0.35,50,50"
                             BackgroundColor="Transparent"  />
            </AbsoluteLayout>

        </ScrollView>
    </StackLayout>
</ContentPage>
