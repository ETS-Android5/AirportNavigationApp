             x:Class="AirportNavigationApp.Views.FlightsPage"
             BackgroundColor="#595959">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Update Flights" Clicked="OnUpdateClicked" />
    </ContentPage.ToolbarItems>


    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <Grid x:Name="productGrid" />
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>